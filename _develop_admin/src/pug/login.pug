include /_include/_config.pug

doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", href=`/${baseDir}/css/normalize.css`)
    link(rel="stylesheet", href=`/${baseDir}/css/login.css`)
    link(rel="stylesheet", href=`/${baseDir}/css/bootstrap-custom.css`)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js")
  body 
    #container 

      #content 
        .title-area
          h1 HOMEPAGE MANAGER 
        #error-message 
        .content-inr 
          .login-box 
            h3.caption-img ログイン
            form(action=`/${baseDir}/` name="fm" )
              .table-area 
                table 
                  tr 
                    td.item-title ユーザーID 
                    td 
                      input(name="username" text="text" placeholder="ユーザーID")
                  tr 
                    td.item-title パスワード
                    td 
                      input(type="password", name="password" placeholder="パスワード")
              #login-button
                a(href="javascript:void(0);") ログイン
        include /_include/_footer.pug
    script(src=`/${baseDir}/js/login.js`) 
